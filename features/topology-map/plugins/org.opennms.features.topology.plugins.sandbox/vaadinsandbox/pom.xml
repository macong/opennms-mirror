		</profile>
		<profile>
			<id>org.eclipse.swt.linux</id>
			<activation>
				<os>
					<family>unix</family>
				</os>
			</activation>
			<dependencies>
				<dependency>
					<groupId>org.eclipse.swt.gtk.linux</groupId>
					<artifactId>x86</artifactId>
					<version>3.3.0-v3346</version>
					<type>jar</type>
				</dependency>
			</dependencies>
		</profile>
	</profiles>





