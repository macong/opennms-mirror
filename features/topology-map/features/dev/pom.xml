<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.opennms.features.topology</groupId>
    <artifactId>features</artifactId>
    <version>1.11.2-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.opennms.osgi.features.topology</groupId>
  <artifactId>opennms-topology-dev</artifactId>

  <name>OpenNMS :: Topology :: Development</name>

  <description>All OpenNMS topology runtime features, as well as development utilities.</description>

  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.opennms.maven.plugins</groupId>
        <artifactId>features-maven-plugin</artifactId>
        <configuration>
          <features>
            <feature>opennms-topology-runtime</feature>
          </features>
          <bundles>
            <bundle>wrap:mvn:junit/junit/${junit.version}</bundle>
          </bundles>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.opennms.osgi.features.topology</groupId>
      <artifactId>opennms-topology-runtime</artifactId>
      <version>${project.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
    </dependency>

    <dependency>
      <groupId>org.opennms.features.topology</groupId>
      <artifactId>org.opennms.features.topology.shell</artifactId>
      <version>${project.version}</version>
    </dependency>

  </dependencies>

</project>
